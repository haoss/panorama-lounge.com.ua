              figure.gallery-list__block.gallery-list__block--zoom
                a(href="./img/gallery-list-1.png").gallery-item
                  img(src="./img/gallery-list-1.png", alt="").img-responsive
            .col-lg-4.col-xs-6.col-xxs-12
              figure.gallery-list__block.gallery-list__block--zoom
                a(href="./img/gallery-list-2.png").gallery-item
                  img(src="./img/gallery-list-2.png", alt="").img-responsive
            .col-lg-4.col-xs-6.col-xxs-12
              figure.gallery-list__block.gallery-list__block--zoom
                a(href="./img/gallery-list-3.png").gallery-item
                  img(src="./img/gallery-list-3.png", alt="").img-responsive
    
